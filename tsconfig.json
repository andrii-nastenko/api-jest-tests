{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "pretty": true,
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}
